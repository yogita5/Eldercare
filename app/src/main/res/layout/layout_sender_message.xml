<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_gravity="start">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/senderImage"
        app:shapeAppearanceOverlay="@style/CornerCut"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/boyprofile"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/SendCardViewStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        app:cardElevation="7dp">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I don't have any money teach me for free. I don't want to learn anyway I just am making this app"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/senderImage"/>

    </com.google.android.material.card.MaterialCardView>


</androidx.appcompat.widget.LinearLayoutCompat>